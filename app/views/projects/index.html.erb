<h1>Listing Projects</h1>
 
<table border="1">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3">Function</th>
  </tr>
 
  <% @projects.each do |project| %>
    <tr>
      <td style="padding:5px;"><%= project.title %></td>
      <td style="padding:5px;"><%= project.text %></td>
      <td style="padding:5px;"><%= link_to "Show", project_path(project) %></td>
      <% if user_signed_in? %>
      <td style="padding:5px;"><%= link_to 'Edit', edit_project_path(project) %></td>
      <td style="padding:5px;"><%= link_to 'Destroy', project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Back', root_path %>